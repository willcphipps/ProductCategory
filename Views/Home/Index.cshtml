@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="m-3 jumbotron jumbotron-fluid">
    <div class="container">
        <h3 class="display-4 text-center">Products  |  <a href="Category">Categories</a></h3>
        <p class="lead">Jumbo helper text</p>
        <hr class="my-2">
        
        <div class="d-flex flex-row justify-content-between">
            <form asp-action="AddProduct" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="Name"></span>
                    <label asp-for="Name"></label>
                    <input asp-for="Name">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description"></span>
                    <label asp-for="Description"></label>
                    <input asp-for="Description">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Price"></span>
                    <label asp-for="Price"></label>
                    <input asp-for="Price">
                <input type="submit" value="Add Product" class="btn btn-outline-secondary">
            </form>
            </div>
            <div clas="float-right">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Existing Products</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var prod in ViewBag.Product){
                        <tr>
                            <td scope="row"><a href="Product/@prod.ProdId">@prod.Name</a><a class="float-right text-danger" href="product/destroy/@prod.ProdId"> &times</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>